
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@model GoharSang.Models.vmModel.vmReportBargirt

<div class="container dailyCol">
    <div class="row dailyRow">
        <div class="col dailyLDiv">
            <a class="btn btn-primary d-block dailyBtnTop" href="~/Home/Index" role="button">صفحه اصلی</a>
            <br>
            <label class="d-block dailyTitle">
                فیلتر های تاریخ رنجی | معدن | نوع کوپ | وزن | انبار | ابعاد | کد کوپ | شماره حواله
            </label>
            <div class="table-responsive-sm">
                <table class="table table-info table-striped dailyTable">
                    <thead>

                        <tr>
                            <td>ردیف</td>
                            <td>معدن</td>
                            <td>نوع کوپ</td>
                            <td>انبار</td>
                            <td>وزن</td>
                            <td>ابعاد کوپ</td>
                            <td>کد کوپ</td>
                            @*<td>تصاویر</td>*@
                            <td>تاریخ ورود</td>
                            <td>شماره حواله</td>
                        </tr>

                    </thead>

                    <tbody>
                        @{
                            int i = 0;
                        }
                        @foreach (var item in Model.list)
                        {
                            i++;
                            <tr>
                                <td>@i</td>
                                <td>@item.minename</td>
                                <td>@item.copname</td>
                                <td>@item.StoreName</td>
                                <td>@item.Weight</td>
                                <td>@item.Dimensions</td>
                                <td>@item.CopCode</td>
                                @*<td>مشاهده</td>*@
                                <td>@item.Uploaddate</td>
                                <td>@item.Transfernumber</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <button class="btn btn-primary dailyBtnBottom" onclick="window.print()">چاپ گزارش</button>
            <button class="btn btn-primary dailyBtnBottom2" onclick="location.href='@Url.Action("export", "ReportTotal")'">خروجی اکسل</button>
        </div>
    </div>
</div>

@{
    ViewBag.Title = "ثبت رزرو کوپ";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@model IEnumerable<GoharSang.Models.vmModel.vmListRecordEntry>
<h1 style="float:right">@ViewBag.Title</h1>


<div class="container dailyCol">
    <div class="row dailyRow">
        <div class="col dailyLDiv">
            <a class="btn btn-primary d-block dailyBtnTop" href="~/Home/Index" role="button">صفحه اصلی</a>
            <br>
            <label class="buyerLable">مشخصات خریدار</label>
            <div class="entryForm">
                <div class="row margTop1">
                    <div class="col-sm-2 col-4 rgEnLable">
                        <label>خریدار</label>
                    </div>
                    <div class="col-sm-4 col-8">
                        <input type="text" class="form-control float-right" id="CustomerName">
                    </div>
                    <div class="col-sm-2 col-4 rgEnLable">
                        <label>انقضا رزرو</label>

                    </div>
                    <div class="col-sm-4 col-8">
                        <input type="text" class="form-control jalali-datepicker" id="dateLoad">
                    </div>
                </div>




                <div class="row">
                    <div class="col-sm-12">
                        <div class="col-sm-2">
                        </div>
                        <div class="col-sm-4">
                            <label>انبار</label>
                            <select id="SelectStore" class="form-control float-right width100" style="padding:2px 8px"></select>

                        </div>
                        <div class="col-sm-2">
                        </div>
                        <div class="col-sm-4">
                            <label>کدکوپ</label>

                            <input class="form-control" id="InputeSearch" />

                        </div>

                    </div>
                </div>






                <div class="row margTop1">
                    <div class="col-sm-2 col-4 rgEnLable">
                        <label>کد محصول</label>
                    </div>

                </div>


                <div class="row">


                    <div class="col-sm-12">

                        <div class="col-sm-4">

                        </div>

                        <div class="col-sm-8">
                            <table class="table-active" style="border:solid">
                                <thead>
                                    <tr>
                                        <td style="border:solid;text-align:center">انتخاب</td>
                                        <td style="border:solid;text-align:center">معدن</td>
                                        <td style="border:solid;text-align:center">نوع کوپ</td>
                                        <td style="border:solid;text-align:center">ابعاد</td>
                                        <td style="border:solid;text-align:center">وزن</td>
                                        <td style="border:solid;text-align:center">کد کوپ</td>
                                        <td style="border:solid;text-align:center">شماره حواله</td>

                                    </tr>
                                </thead>
                                <tbody id="BodyModel">

                                    @foreach (var item in Model)
                                    {

                                        <tr style="border:solid;text-align:center">
                                            <td style="border:solid;text-align:center">
                                                <div class="checkbox checkbox-replace checkbox-primary">
                                                    <input type="checkbox" id="@item.Id" value="@item.Id">
                                                    <label for="@item.Id" id="lblproduct"></label>
                                                </div>
                                            </td>
                                            <td style="border:solid;text-align:center">
                                                @item.minename
                                            </td>
                                            <td style="border:solid;text-align:center">
                                                @item.copname
                                            </td>

                                            <td style="border:solid;text-align:center">
                                                @item.Dimensions
                                            </td>

                                            <td style="border:solid;text-align:center">
                                                @item.Weight
                                            </td>

                                            <td style="border:solid;text-align:center">
                                                @item.CopsCod
                                            </td>
                                            <td style="border:solid;text-align:center">
                                                @item.Transfernumber
                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>

                    </div>





                </div>



                <div class="row margTop1">
                    <div class="col">
                        <button class="btn btn-primary float-left SaveBtn" onclick="BtnRegisterCopeReserve()">ذخیره</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section localscript{



    <script>
        window.onload = load();

        function load() {

            getStore();

        }


        function getStore() {
            $.ajax({
                url: '/RecordEntry/getStore',
                data: null,
                type: 'post',
                beforeSend: function () {
                    $(LoadingGift).show();
                },
                success: function (data) {

                    $(LoadingGift).hide();


                    var str = "<option value='0'>لطفا موردی را انتخاب نمایید</option>";


                    for (var i in data) {

                        str += "<option value=" + data[i].Id + ">" + data[i].Display + "</option>";
                    }
                    SelectStore.innerHTML = str;


                }
            });

        }


    </script>




    <script>
        function RegisterCopeReserve(Id, CustomerFullName, IdStore) {
            this.Id = Id;
            this.CustomerFullName = CustomerFullName;
            this.IdStore = IdStore;

        }
        var _RegisterCopeReserve = new RegisterCopeReserve(0, "", 0);
    </script>


    <script>
        function BtnRegisterCopeReserve() {


            if (CustomerName.value == "" || SelectStore.value == 0) {
                AlertInAjax("تمامی اطلاعات را وارد نمایید", modalAlertInAjax, "alert-danger");
                $(modalAlertInAjax).modal("show");

                return;
            }

            else {
                _RegisterCopeReserve.CustomerFullName = CustomerName.value;
                _RegisterCopeReserve.IdStore = SelectStore.value;

                var DateLoad = dateLoad.value;

                SelectedProp = {};
                ListProps = [];
                $(':checkbox:checked').each(function (i) {

                    var Id = $(this).val();

                    item = {};
                    item["Id"] = Id;

                    ListProps.push(item);
                });
                SelectedProp["ListProps"] = ListProps;

                $.ajax({
                    url: '/RegisterCopeReserve/RegisterCopeReserve',
                    data: { cb: _RegisterCopeReserve, date: DateLoad, prop: SelectedProp },
                    type: 'post',
                    beforeSend: function () {
                        $(LoadingGift).show();
                    },

                    success: function (data) {

                        $(LoadingGift).hide();


                        AlertInAjax("عملیات با موفقیت انجام شد", modalAlertInAjax, "alert-success");
                        $(modalAlertInAjax).modal("show");
                        setInterval(function () { $(modalAlertInAjax).modal("hide"); }, 2000);
                        $(modalAlertInAjax).on("hidden.bs.modal", function () {

                            location.href = "/RegisterCopeReserve/Index";
                        });
                    }
                });
            }


        }
    </script>


    <script>
        $(InputeSearch).keyup(function () {
            var value = $(this).val().toLowerCase();
            $("#lblproduct").filter(function () {

                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);

            });
        });
    </script>
}